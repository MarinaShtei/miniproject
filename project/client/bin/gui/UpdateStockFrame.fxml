   <children>
      <TableView fx:id="tblViewProducts" layoutX="128.0" layoutY="130.0" prefHeight="273.0" prefWidth="558.0">
         <columns>
            <TableColumn fx:id="productIDCol" prefWidth="98.0" text="Product ID" />
            <TableColumn fx:id="productNameCol" minWidth="0.0" prefWidth="212.0" text="Product Name" />
            <TableColumn fx:id="priceCol" minWidth="0.0" prefWidth="115.0" text="Price" />
            <TableColumn fx:id="stockQuantityCol" minWidth="0.0" prefWidth="130.0" text="Stock Quantity" />
         </columns>
      </TableView>
      <Button fx:id="btnBack" layoutX="128.0" layoutY="411.0" mnemonicParsing="false" onAction="#backToPreviousPage" prefHeight="30.0" prefWidth="70.0" text="Back" />
      <Button fx:id="btnUpdateStock" layoutX="322.0" layoutY="411.0" mnemonicParsing="false" onAction="#updateStock" prefHeight="30.0" text="Update Stock" />
